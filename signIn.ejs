<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
</head>
<body>
    <h1>Welcome! Please Sign In</h1>
    <label for='name'>Username:</label>
    <input type='text' id='name'>
    <br>
    <label for='passwd'>Password:</label>
    <input  type='password' id='passwd'>
    <br>
    <button onclick='login()'>Sign in</button>

    <br>
    <h3>No account?</h3>
    <button onclick="window.location.href='/signUp'">Sign up</button>
</body>
<script>
    async function signUp(url = '') {
        let name = document.getElementById('name').value;
        let pswd = document.getElementById('passwd').value;
        if (name == '' || pswd == '') {
                window.alert('Please enter both a username and password');
                return;
        }
        const data = { username: `${name}`, password: `${pswd}`};
        console.log(data);
        console.log(JSON.stringify(data));

        fetch('https://arcane-peak-85886.herokuapp.com/signIn', {
            method: 'post',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        }).then((res) => res.json())
        .then((data) => {
            window.alert('Username and Password match');
            console.log(data)
            window.location.href='/homepage';
        })
        .catch((err) => console.log(err))
    }
</script>
</html>