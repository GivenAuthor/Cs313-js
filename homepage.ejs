<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <h1>Welcome</h1>
    <br>
    <button id='btn' type="submit" onclick='getData()'>See previous days</button>
    <br>
    <h2>Add data for the day</h2>
    <form action='/submission' method='GET'>
    <button type="submit">Add Info</button>
    </form>
</body>
<script>
        
        async function getData(url = '') {
            const response = await fetch(url, {
                method: 'POST',
                mode: 'cors',
                cache: 'no-cache', 
                credentials: 'same-origin', 
                headers: {
                    'Content-Type': 'application/json'
                },
                redirect: 'follow', 
                referrerPolicy: 'no-referrer'
            });
            return response.json();
        }
            getData('https://arcane-peak-85886.herokuapp.com/homepage',)
            .then( response => {
                console.log(response);
                console.log(response.data);
                console.log(response.data[0]);

                let data = JSON.parse(response.data);
                let tr = document.createAttribute('tr');
                data.forEach((item) => {
                    let td = document.createAttribute('td');
                    td.value = item.name;
                    tr.appendChild(td);
                });
            let table = document.createAttribute('table');
            document.getElementsByTagName('body').appendChild(table);
    });
</script>
</html>