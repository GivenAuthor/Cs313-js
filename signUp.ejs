<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="./public/globalStyle.css">
</head>

<body>
    <h3>Please Enter a Username and Passsword</h3>
    <br>
    <label for='email'>Email:</label>
    <input type='email' id='email'>
    <br>
    <br>
    <label for='username'>Username:</label>
    <input type='text' id='username'>
    <br>
    <br>
    <label for='passwd'>Password:</label>
    <input type='password' id='passwd'>
    <br>
    <br>
    <button onclick='signUp()'>Sign Up</button>
    <br>
    <br>
    <button onclick="window.location.href='/'">Back to sign in</button>
</body>
<script>
    async function signUp(url = '') {
        let email = document.getElementById('email').value;
        let name = document.getElementById('username').value;
        let pswd = document.getElementById('passwd').value;
        if (email == '' || name == '' || pswd == '') {
            window.alert('Please enter an email, username and password');
            return;
        }
        const data = { email: `${email}`, username: `${name}`, password: `${pswd}` };
        console.log(data);
        console.log(JSON.stringify(data));

        fetch('https://arcane-peak-85886.herokuapp.com/signUp', {
            method: 'post',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        }).then((res) => res.json())
            .then((data) => {
                window.alert('User information successfully submitted');
                console.log(data)
            })
            .catch((err) => console.log(err))
    }

</script>

</html>